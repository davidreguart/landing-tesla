---
const { color, title, subtitle } = Astro.props
const textColor = `text-${color}`
---


<section
			class="landing-section bg-black h-screen w-screen text-center relative overflow-hidden"
			data-header-color={ color }
		>
		<div class="z-30 relative h-full flex flex-col">

			<header>
				<h2 class={`${textColor} pt-28 text-4xl font-normal mb-1`}>{ title }</h2>
				<p class={`${textColor} text-sm font-light`}>{ subtitle }</p>
			</header>
	
			<footer class="flex flex-grow justify-end flex-col pb-10">
        <slot name="footer" />
			</footer>
		</div>

			<div class="absolute top-0 bottom-0 z-10 h-full w-full">
        <slot name="background" />
		</section>